algoritmo "quadrante"
// Função :
// Autor :
// Data : 16/06/2020
// Seção de Declarações 
var
   x, y : inteiro
inicio
      escreval("Digite os valores das coordenadas X e Y:")
      leia(x)
      leia(y)
      
      enquanto (x <> 0) e (y <> 0) faca
          se (x > 0) e (y > 0) entao
             escreval("QUADRANTE Q1")
          senao
               se (x < 0) e (y > 0) entao
                  escreval("QUADRANTE Q2")
               senao
                    se (x < 0) e (y < 0) entao
                       escreval("QUADRANTE Q3")
                    senao
                         escreval("QUADRANTE Q4")
                    fimse
               fimse
          fimse
          
          escreval("Digite os valores das coordenadas X e Y:")
          leia(x)
          leia(y)
      fimenquanto
fimalgoritmo
